//Checks to see if number is even or odd using recursive function

function isEven(n){
	if (n == 0){
		return true;
	} else if (n == 1){
		return false;
	} else {
		return isEven(n - 2);
	}
};

console.log("0 is even? " + isEven(0));
console.log("1 is even? " + isEven(1));
console.log("23443 is even? " + isEven(23443));
