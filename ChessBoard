var chessBoard = "";
for (var i = 1; i <= 8; i++){          // This counter controls the number of lines
    for (var j = 1; j <= 8; j++){      // This counter controls the number of characters within a single line
		if ((i + j) % 2 == 0){
			chessBoard += " ";
		} else {
			chessBoard += "#";
	    }
	}
    chessBoard += "\n";
}
console.log(chessBoard);
